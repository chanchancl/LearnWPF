<Window x:Class="WPF1.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF1"
        mc:Ignorable="d"
        Title="StackPanel" Height="300" Width="300">
    <Border Margin="5" Padding="5" Background="LightYellow" 
            BorderBrush="SteelBlue" BorderThickness="5,5,5,5" CornerRadius="5"
            VerticalAlignment="Top">
        <StackPanel Margin="3">
            <Label Margin="3" HorizontalAlignment="Center">A Button Stack</Label>
            <Button MaxWidth="200" MinWidth="100" Margin="3" HorizontalAlignment="Left">Button 1</Button>
            <Button MaxWidth="200" MinWidth="100" Margin="3" HorizontalAlignment="Right">Button 2</Button>
            <Button MaxWidth="200" MinWidth="100" Margin="3" >Button 3</Button>
            <Button MaxWidth="200" MinWidth="100" Margin="3" >Button 4</Button>
        </StackPanel>
    </Border>
</Window>
